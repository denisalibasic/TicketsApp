@page "{id:int}"
@model TicketsWebApp.Pages.EditTicketModel
@{
    ViewData["Title"] = "Edit Ticket";
}

<h1>Edit Ticket</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="TicketRequest.Name" class="control-label"></label>
        <input asp-for="TicketRequest.Name" class="form-control" />
        <span asp-validation-for="TicketRequest.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TicketRequest.Quantity" class="control-label"></label>
        <input asp-for="TicketRequest.Quantity" class="form-control" />
        <span asp-validation-for="TicketRequest.Quantity" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="Tickets" class="btn btn-secondary">Cancel</a>
</form>
